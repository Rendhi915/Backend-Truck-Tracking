# Fleet Management Backend Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleet_management
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRES_IN=24h

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# WebSocket Configuration
WS_PORT=3002

# Real-time Update Intervals (in milliseconds)
LOCATION_UPDATE_INTERVAL=5000
TIRE_PRESSURE_UPDATE_INTERVAL=30000
FUEL_UPDATE_INTERVAL=60000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/fleet-management.log

# Redis Configuration (for production clustering)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourcompany.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_FROM=Fleet Management System <alerts@yourcompany.com>

# Mining Site Configuration
SITE_NAME=Main Mining Site
SITE_TIMEZONE=Asia/Jakarta
SITE_CENTER_LAT=-6.7500
SITE_CENTER_LNG=107.1500
SITE_BOUNDARY_RADIUS_KM=5

# Truck Configuration
MAX_TRUCKS=1000
DEFAULT_TIRE_COUNT=6
LOW_FUEL_THRESHOLD=20
LOW_TIRE_PRESSURE_THRESHOLD=80
HIGH_TIRE_PRESSURE_THRESHOLD=120

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
PERFORMANCE_MONITORING=true
ALERT_WEBHOOK_URL=